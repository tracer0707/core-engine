{
    "version": 3,
    "configurePresets": [
        {
            "name": "windows-base",
            "description": "Set target OS Windows (x64 version) for Visual Studio",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/windows",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "RelWithDebInfo",
            "displayName": "RelWithDebInfo",
            "description": "Set target OS Windows (x64 version) for Visual Studio (RelWithDebInfo)",
            "inherits": "windows-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "linux-base",
            "description": "Set target OS Linux (x64 version) for Visual Studio Code",
            "hidden": true,
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/linux",
            "installDir": "${sourceDir}/install/${presetName}",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "RelWithDebInfo Linux",
            "displayName": "RelWithDebInfo",
            "description": "Set target OS Linux (x64 version) for Visual Studio Code (RelWithDebInfo)",
            "inherits": "linux-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        }
    ]
}